@if (Show)
{ 
    <div class="dialog-container">

        <div class="dialog bg-dark p-4">
            <div class="d-flex justify-content-between align-items-center mb-2">
                @if (Title is not null)
                {
                    <h6 class="text-light m-0 fs-4">@Title</h6>
                }
                <button class="btn-close btn-close-white" @onclick="() => OnClose.InvokeAsync()" aria-label="Close"></button>
            </div>
            @if (Meta is not null)
            {
                <div class="text-light small lh-sm">
                    @Meta
                </div>
            }
            @ChildContent
        </div>
    </div>
}

@code {
    [Parameter] public RenderFragment? Title { get; set; }
    [Parameter] public RenderFragment? Meta { get; set; }
    [Parameter, EditorRequired] public RenderFragment? ChildContent { get; set; }
    [Parameter, EditorRequired] public EventCallback OnClose { get; set; } 
    [Parameter] public bool Show { get; set; }
}
